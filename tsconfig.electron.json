{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": false,
    "outDir": "build",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"],
      "@shared": ["shared"],
      "@shared/*": ["shared/*"]
    },
    "strictNullChecks": false,
    "noImplicitAny": false,
    "esModuleInterop": true
  },
  "include": ["window", "shared"]
}
