{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": false,
    "outDir": "build",
    "baseUrl": "./",
    "paths": {
      "@shared": ["../src/shared"],
      "@shared/*": ["../src/shared/*"]
    },
    "strictNullChecks": false,
    "noImplicitAny": false,
    "esModuleInterop": true
  },
  "include": ["window", "src/shared"]
}
